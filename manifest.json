{
  "manifest_version": 3,
  "name": "Pocket Pal - Kanto Companion",
  "description": "A Gen 1 Pok√©mon companion that follows you as a Chrome extension. Raise, train, and care for your Pocket Pal!",
  "version": "0.1.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Pocket Pal",
    "default_icon": {
      "16": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    }
  },
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
